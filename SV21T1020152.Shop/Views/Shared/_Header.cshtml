
<header class="main-header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="~/">
                <i class="bi bi-house-door me-2"></i> Trang chủ
            </a>

            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="~/Product">
                            <i class="bi bi-basket3 me-2"></i> Mặt Hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="~/Order/Create">
                            <i class="bi bi-cart4 me-2"></i> Lập Giỏ hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="~/Order/HistoryOrder">
                            <i class="bi bi-bag-check me-2"></i> Đơn hàng
                        </a>
                    </li>
                </ul>

                @if (User.GetUserData() != null)
                {
                    var userData = User.GetUserData();
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/employees/nophoto.png" class="rounded-circle user-image" alt="User Image" width="30" height="30">
                                <span class="d-none d-lg-inline">@userData.DisplayName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li class="dropdown-item text-center">
                                    <img src="~/images/customer/nophoto.png" class="img-thumbnail rounded-circle" alt="User Image" width="60" height="60">
                                    <p class="mt-2">@userData.DisplayName</p>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a href="~/Account/ChangePassword" class="dropdown-item">Đổi mật khẩu</a>
                                </li>
                                <li>
                                    <a href="~/Account/ChangeProfile/@User.GetUserData().UserId" class="dropdown-item">Đổi lý lịch cá nhân</a>
                                </li>
                                <li>
                                    <a href="~/Account/Logout" class="dropdown-item">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </nav>
</header>

